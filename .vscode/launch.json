    "version": "0.2.0",
    "configurations": [
          {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceRoot}",
            "args": [
                "--i"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\src\\index.js",
            "outputCapture": "std",
            "args": [
                "--previews.enable",
                "true",
                "--metadata.fieldOrder",
                "true",
                "--metadata.scenes",
                "true",
                "--metadata.blackDetection",
                "true",
                "--metadata.freezeDetection",
                "true",
                "--metadata.blackDuration",
                "0.04",
                "--caspar",
                "null",
            ]
        }
    ]
}
